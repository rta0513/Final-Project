        print(r" /::\~\:\  \      |:|__|__            _\:\~\ \  \   /:/  \:\  \   /::\~\:\  \   /:/|:|  |__") 
        print(r"/:/\:\ \:\__\     /::::\__\          /\ \:\ \ \__\ /:/__/ \:\__\ /:/\:\ \:\__\ /:/ |:| /\__\\")
        print(r"\/__\:\/:/  /    /:/~~/~             \:\ \:\ \/__/ \:\  \  \/__/ \/__\:\/:/  / \/__|:|/:/  /")
        print(r"     \::/  /    /:/  /                \:\ \:\__\    \:\  \            \::/  /      |:/:/  /") 
        print(r"      \/__/     \/__/                  \:\/:/  /     \:\  \           /:/  /       |::/  /")  
        print(r"                                        \::/  /       \:\__\         /:/  /        /:/  /")  
        print(r"                                         \/__/         \/__/         \/__/         \/__/") 
    elif rand_choi == 2:
        print(r"     ___                              ___           ___           ___           ___")     
        print(r"    /\  \                            /\__\         /\__\         /\  \         /\  \\")    
        print(r"   /::\  \       ___                /:/ _/_       /:/  /        /::\  \        \:\  \\")   
        print(r"  /:/\:\__\     /|  |              /:/ /\  \     /:/  /        /:/\:\  \        \:\  \\")  
        print(r" /:/ /:/  /    |:|  |             /:/ /::\  \   /:/  /  ___   /:/ /::\  \   _____\:\  \\") 
        print(r"/:/_/:/  /     |:|  |            /:/_/:/\:\__\ /:/__/  /\__\ /:/_/:/\:\__\ /::::::::\__\\")
        print(r"\:\/:/  /    __|:|__|            \:\/:/ /:/  / \:\  \ /:/  / \:\/:/  \/__/ \:\~~\~~\/__/")
        print(r" \::/__/    /::::\  \             \::/ /:/  /   \:\  /:/  /   \::/__/       \:\  \\")      
        print(r"  \:\  \    ~~~~\:\  \             \/_/:/  /     \:\/:/  /     \:\  \        \:\  \\")    
