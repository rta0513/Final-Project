        print(r"                                           ___           ___           ___           ___")     
        print(r"      ___           __                    /  /\         /  /\         /  /\         /  /\\")    
        print(r"     /  /\         |  |\                 /  /::\       /  /::\       /  /::\       /  /::|")   
        print(r"    /  /::\        |  |:|               /__/:/\:\     /  /:/\:\     /  /:/\:\     /  /:|:|")   
